# Configuración básica del servidor MCP (LIVE solamente)

# Logging and session configuration
LOG_LEVEL=INFO
SESSION_TTL_HOURS=8
COMMISSION_RATE=0.005

# Environment and features
FORCE_LIVE_ENVIRONMENT=true
USE_PYROFEX_FOR_MEP=true
PYROFEX_TIMEOUT_SECONDS=10

# Broker configuration
# Path to broker configuration JSON file (default: broker_config.json)
BROKER_CONFIG_PATH=broker_config.json

# Optional: Override default broker URL (normally loaded from broker_config.json)
# PYROFEX_URL=https://api.eco.xoms.com.ar/

# Marketdata service (opcional). Si no se define, el servidor usa pyRofex
# directamente para las operaciones que lo requieran.
MARKETDATA_URL=
